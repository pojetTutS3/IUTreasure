<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CECECE"
    >

    <LinearLayout
        android:id="@+id/linearMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        >
        <Button
            android:id="@+id/btnJouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/vertBtn"
            android:text="@string/txtJouer"
            android:layout_margin="15dp"
            />

        <Button
            android:id="@+id/btnAide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/vertBtn"
            android:text="@string/txtAide"/>

        <Button
            android:id="@+id/btnDeco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/vertBtn"
            android:text="@string/txtDeco"
            android:layout_margin="15dp"/>

    </LinearLayout>
